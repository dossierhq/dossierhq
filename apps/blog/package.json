{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "./scripts/generate-typescript.js && tsx ./scripts/sync-database-with-disk.ts && npm run copy-public-resources && npm run build-app && tsx --tsconfig ./tsconfig.tsx.json ./scripts/generate-atom-xml.tsx",
    "lint": "npm run prettier:check && npm run eslint:check",
    "clean": "rm -rf .next/ && rm -f blog.build.log tsconfig.tsbuildinfo",
    "copy-public-resources": "cp node_modules/@antonz/codapi/dist/snippet.js public/codapi-snippet.js && cp node_modules/codejar/dist/codejar.js public/ && cp node_modules/codejar/dist/codejar.js public/ && cp node_modules/prismjs/prism.js public/",
    "eslint:check": "eslint --max-warnings=0",
    "eslint:fix": "eslint --fix .",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "build-app": "next build",
    "start": "next dev --port 3003",
    "start:built": "next start",
    "test": "vitest",
    "test:update-snapshot": "vitest --update",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@antonz/codapi": "~0.19.10",
    "@cloudinary/url-gen": "~1.21.0",
    "@dossierhq/better-sqlite3": "workspace:*",
    "@dossierhq/cloudinary": "workspace:*",
    "@dossierhq/core": "workspace:*",
    "@dossierhq/design": "workspace:*",
    "@dossierhq/leaflet": "workspace:*",
    "@dossierhq/react-components": "workspace:*",
    "@dossierhq/react-components2": "workspace:*",
    "@dossierhq/server": "workspace:*",
    "better-sqlite3": "~11.10.0",
    "codejar": "~4.2.0",
    "leaflet": "~1.9.4",
    "lexical": "0.14.3",
    "next": "~15.3.2",
    "prismjs": "~1.30.0",
    "react": "~19.1.0",
    "react-dom": "~19.1.0",
    "tslib": "~2.8.1"
  },
  "devDependencies": {
    "@dossierhq/eslint-config": "workspace:*",
    "@dossierhq/typescript-generator": "workspace:*",
    "@types/better-sqlite3": "~7.6.13",
    "@types/react": "19.1.6",
    "@types/react-dom": "~19.1.3",
    "dotenv": "~16.5.0",
    "eslint": "~9.27.0",
    "schema-dts": "~1.1.5",
    "tsx": "~4.19.4",
    "typescript": "~5.8.3",
    "vitest": "~3.1.2"
  }
}
