{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "tsx ./scripts/generate-typescript.ts && tsx ./scripts/sync-database-with-disk.ts && npm run copy-public-resources && npm run build-app && tsx --tsconfig ./tsconfig.tsx.json ./scripts/generate-atom-xml.tsx",
    "lint": "eslint --max-warnings=0",
    "lint:staged": "lint-staged",
    "clean": "rm -rf .next/ && rm -f blog.build.log tsconfig.tsbuildinfo",
    "copy-public-resources": "cp node_modules/@antonz/codapi/dist/snippet.js public/codapi-snippet.js && cp node_modules/codejar/dist/codejar.js public/ && cp node_modules/codejar/dist/codejar.js public/ && cp node_modules/prismjs/prism.js public/",
    "eslint:fix": "eslint --fix .",
    "prettier:check": "prettier --check .",
    "format": "prettier --write .",
    "build-app": "next build",
    "start": "next dev --port 3003",
    "start:built": "next start",
    "test": "vitest",
    "test:update-snapshot": "vitest --update",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@antonz/codapi": "~0.20.0",
    "@cloudinary/url-gen": "~1.22.0",
    "@dossierhq/better-sqlite3": "workspace:*",
    "@dossierhq/cloudinary": "workspace:*",
    "@dossierhq/core": "workspace:*",
    "@dossierhq/design": "workspace:*",
    "@dossierhq/leaflet": "workspace:*",
    "@dossierhq/react-components": "workspace:*",
    "@dossierhq/react-components2": "workspace:*",
    "@dossierhq/server": "workspace:*",
    "better-sqlite3": "~12.6.2",
    "codejar": "~4.3.0",
    "leaflet": "~1.9.4",
    "lexical": "0.40.0",
    "next": "16.1.6",
    "prismjs": "~1.30.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tslib": "~2.8.1"
  },
  "devDependencies": {
    "@dossierhq/eslint-config": "workspace:*",
    "@dossierhq/typescript-generator": "workspace:*",
    "@types/better-sqlite3": "~7.6.13",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "dotenv": "~17.2.1",
    "eslint": "~10.0.0",
    "schema-dts": "~1.1.5",
    "tsx": "~4.21.0",
    "typescript": "~5.9.3",
    "vitest": "~4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,cjs,mjs}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ]
  }
}
