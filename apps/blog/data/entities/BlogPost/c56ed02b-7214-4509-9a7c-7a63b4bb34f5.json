                  }
                ]
              },
              {
                "direction": "ltr",
                "format": "",
                "indent": 0,
                "type": "listitem",
                "version": 1,
                "value": 6,
                "children": [
                  {
                    "detail": 0,
                    "format": 16,
                    "mode": "normal",
