{
  "name": "@dossierhq/server",
  "version": "0.7.21",
  "description": "Library to set up a Dossier server.",
  "keywords": [
    "dossier",
    "cms",
    "schema",
    "content"
  ],
  "homepage": "https://dossierhq.dev",
  "author": {
    "name": "Jonas Bengtsson"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./lib/index.js"
  },
  "types": "./lib/index.d.ts",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && post-process-build deno-esm-only",
    "build:watch": "tsc --watch",
    "lint": "eslint --max-warnings=0",
    "lint:staged": "lint-staged",
    "clean": "rm -rf lib/",
    "eslint:fix": "eslint --fix .",
    "prettier:check": "prettier --check .",
    "format": "prettier --write .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:update-snapshot": "vitest --update",
    "test:watch": "vitest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dossierhq/dossierhq.git",
    "directory": "libraries/server"
  },
  "dependencies": {
    "@dossierhq/database-adapter": "workspace:*",
    "tslib": "~2.8.1"
  },
  "peerDependencies": {
    "@dossierhq/core": "workspace:*"
  },
  "devDependencies": {
    "@dossierhq/core": "workspace:*",
    "@dossierhq/core-vitest": "workspace:*",
    "@dossierhq/eslint-config": "workspace:*",
    "@dossierhq/typescript-config": "workspace:*",
    "@vitest/coverage-v8": "~4.0.18",
    "eslint": "~9.39.2",
    "typescript": "~5.9.3",
    "vitest": "~4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,cjs,mjs}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ]
  }
}
