{
  "name": "@dossierhq/better-sqlite3",
  "version": "0.2.1",
  "description": "A Dossier database adapter for better-sqlite3.",
  "keywords": [
    "dossier",
    "cms",
    "sqlite",
    "sqlite3",
    "better-sqlite3"
  ],
  "homepage": "https://dossierhq.dev",
  "type": "module",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": {
        "types": "./lib/esm/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "types": "./lib/esm/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "npm run prettier:check && heft build --clean && npm run test && post-process-build cjs-package-json",
    "build:watch": "heft build --watch",
    "clean": "heft clean",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "vitest",
    "test:update-snapshot": "vitest --update",
    "test:watch": "vitest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dossierhq/dossierhq.git",
    "directory": "libraries/better-sqlite3"
  },
  "dependencies": {
    "@dossierhq/sqlite-core": "workspace:*",
    "tslib": "~2.5.0"
  },
  "devDependencies": {
    "@dossierhq/core": "workspace:*",
    "@dossierhq/eslint-config-generic": "workspace:*",
    "@dossierhq/heft-node-rig": "workspace:*",
    "@dossierhq/integration-test": "workspace:*",
    "@dossierhq/server": "workspace:*",
    "@rushstack/heft": "0.49.7",
    "@types/better-sqlite3": "~7.6.3",
    "better-sqlite3": "~8.0.1",
    "eslint": "~8.33.0",
    "prettier": "2.8.3",
    "typescript": "~4.9.4",
    "vitest": "0.28.4"
  }
}
