{
  "name": "@dossierhq/sqlite-core",
  "version": "0.4.1",
  "description": "A library used by concrete SQLite adapters for Dossier.",
  "keywords": [
    "dossier",
    "cms",
    "sqlite",
    "sqlite3"
  ],
  "homepage": "https://dossierhq.dev",
  "type": "module",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": {
        "types": "./lib/esm/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "types": "./lib/esm/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "npm run prettier:check && heft build --clean && npm run test && post-process-build deno cjs-package-json",
    "build:watch": "heft build-watch",
    "clean": "heft clean",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "vitest",
    "test:update-snapshot": "vitest --update",
    "test:watch": "vitest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dossierhq/dossierhq.git",
    "directory": "libraries/sqlite-core"
  },
  "dependencies": {
    "@dossierhq/core": "workspace:*",
    "@dossierhq/database-adapter": "workspace:*",
    "tslib": "~2.6.1"
  },
  "devDependencies": {
    "@dossierhq/core-vitest": "workspace:*",
    "@dossierhq/eslint-config-generic": "workspace:*",
    "@dossierhq/heft-node-rig": "workspace:*",
    "@rushstack/heft": "0.58.2",
    "eslint": "~8.46.0",
    "prettier": "3.0.1",
    "typescript": "~5.1.6",
    "vitest": "~0.34.1"
  }
}
