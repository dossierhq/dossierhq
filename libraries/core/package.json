{
  "name": "@dossierhq/core",
  "version": "0.7.10",
  "description": "The core Dossier library used by clients and server alike, used to interact with schema and entities directly, as well as remotely through a client.",
  "keywords": [
    "dossier",
    "cms",
    "schema",
    "content"
  ],
  "homepage": "https://dossierhq.dev",
  "author": {
    "name": "Jonas Bengtsson"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./lib/index.js"
  },
  "types": "./lib/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "npm run prettier:check && eslint && tsc && npm run test && post-process-build deno-esm-only",
    "build:watch": "tsc --watch",
    "clean": "rm -rf lib/ coverage/",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:update-snapshot": "vitest --update",
    "test:watch": "vitest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dossierhq/dossierhq.git",
    "directory": "libraries/core"
  },
  "dependencies": {
    "tslib": "~2.8.1"
  },
  "devDependencies": {
    "@dossierhq/eslint-config": "workspace:*",
    "@dossierhq/typescript-config": "workspace:*",
    "@ianvs/prettier-plugin-sort-imports": "~4.4.1",
    "@vitest/coverage-v8": "~3.0.5",
    "eslint": "~9.20.0",
    "prettier": "3.4.2",
    "typescript": "~5.7.3",
    "vitest": "~3.0.5"
  }
}
