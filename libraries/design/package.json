{
  "name": "@dossierhq/design",
  "version": "0.7.6",
  "description": "The design system for Dossier.",
  "keywords": [
    "dossier",
    "cms",
    "design-system",
    "react"
  ],
  "homepage": "https://dossierhq.dev",
  "author": {
    "name": "Jonas Bengtsson"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./lib/index.js",
    "./main.css": "./lib/main.css"
  },
  "types": "./lib/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "npm run prettier:check && ./scripts/generate-icons.cjs && heft build --clean && (npm run css:build 2>&1)",
    "build:watch": "heft build-watch",
    "clean": "heft clean",
    "css:build": "sass src/styles/main.scss lib/main.css",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "start": "storybook dev -p 6007 --no-open",
    "storybook:build": "storybook build --quiet",
    "test": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dossierhq/dossierhq.git",
    "directory": "libraries/design"
  },
  "dependencies": {
    "@creativebulma/bulma-badge": "~1.0.1",
    "@fortawesome/free-solid-svg-icons": "~6.5.2",
    "@react-aria/overlays": "~3.22.0",
    "lodash": "~4.17.21",
    "react-aria-components": "~1.2.0",
    "tslib": "~2.6.3"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@dossierhq/heft-node-rig": "workspace:*",
    "@ianvs/prettier-plugin-sort-imports": "~4.2.1",
    "@rushstack/heft": "0.66.18",
    "@storybook/addon-actions": "~8.1.6",
    "@storybook/addon-docs": "~8.1.6",
    "@storybook/addon-essentials": "~8.1.6",
    "@storybook/addon-links": "~8.1.6",
    "@storybook/preset-scss": "~1.0.3",
    "@storybook/react": "~8.1.6",
    "@storybook/react-vite": "~8.1.6",
    "@storybook/test": "~8.1.6",
    "@types/lodash": "~4.17.4",
    "@types/react": "18.3.3",
    "@types/react-dom": "~18.3.0",
    "@typescript-eslint/eslint-plugin": "~7.12.0",
    "@typescript-eslint/parser": "~7.12.0",
    "@vitejs/plugin-react": "~4.3.0",
    "bulma": "~0.9.4",
    "eslint": "~8.57.0",
    "eslint-plugin-react": "~7.34.2",
    "eslint-plugin-react-hooks": "~4.6.2",
    "eslint-plugin-storybook": "~0.8.0",
    "mini-svg-data-uri": "~1.4.4",
    "prettier": "3.3.1",
    "react": "~18.3.1",
    "react-dom": "~18.3.1",
    "react-stately": "~3.31.0",
    "sass": "~1.77.4",
    "sass-loader": "~14.2.1",
    "storybook": "~8.1.6",
    "svgo": "~3.3.2",
    "typescript": "~5.4.5",
    "vite": "~5.2.12"
  }
}
