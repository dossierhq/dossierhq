{
  "name": "@dossierhq/design",
  "version": "0.7.21",
  "description": "The design system for Dossier.",
  "keywords": [
    "dossier",
    "cms",
    "design-system",
    "react"
  ],
  "homepage": "https://dossierhq.dev",
  "author": {
    "name": "Jonas Bengtsson"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./lib/index.js",
    "./main.css": "./lib/main.css"
  },
  "types": "./lib/index.d.ts",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "./scripts/generate-icons.cjs && tsc && npm run css:build",
    "build:watch": "tsc --watch",
    "lint": "eslint --max-warnings=0",
    "lint:staged": "lint-staged",
    "clean": "rm -rf lib/",
    "css:build": "sass src/styles/main.scss lib/main.css",
    "eslint:fix": "eslint --fix .",
    "prettier:check": "prettier --check .",
    "format": "prettier --write .",
    "start": "storybook dev -p 6007 --no-open",
    "storybook:build": "storybook build --quiet",
    "test": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dossierhq/dossierhq.git",
    "directory": "libraries/design"
  },
  "dependencies": {
    "@creativebulma/bulma-badge": "~1.0.1",
    "@fortawesome/free-solid-svg-icons": "~7.1.0",
    "@react-aria/overlays": "~3.31.0",
    "lodash": "~4.17.23",
    "react-aria-components": "~1.15.1",
    "tslib": "~2.8.1"
  },
  "peerDependencies": {
    "react": ">=19",
    "react-dom": ">=19"
  },
  "devDependencies": {
    "@dossierhq/eslint-config": "workspace:*",
    "@dossierhq/typescript-config": "workspace:*",
    "@storybook/addon-docs": "~10.2.7",
    "@storybook/addon-links": "~10.2.7",
    "@storybook/preset-scss": "~1.0.3",
    "@storybook/react-vite": "~10.2.7",
    "@types/lodash": "~4.17.23",
    "@types/react": "19.2.9",
    "@types/react-dom": "~19.2.3",
    "@vitejs/plugin-react": "~5.1.2",
    "bulma": "~0.9.4",
    "eslint": "~9.39.2",
    "mini-svg-data-uri": "~1.4.4",
    "react": "~19.2.3",
    "react-dom": "~19.2.3",
    "react-stately": "~3.44.0",
    "sass": "~1.97.3",
    "sass-loader": "~16.0.5",
    "storybook": "~10.2.7",
    "svgo": "~4.0.0",
    "typescript": "~5.9.3",
    "vite": "7.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,cjs,mjs}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.css": "prettier --write"
  }
}
