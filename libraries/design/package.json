{
  "name": "@dossierhq/design",
  "version": "0.2.5",
  "description": "The design system for Dossier.",
  "keywords": [
    "dossier",
    "cms",
    "design-system",
    "react"
  ],
  "homepage": "https://dossierhq.dev",
  "type": "module",
  "exports": {
    ".": "./lib/index.js",
    "./main.css": "./lib/main.css"
  },
  "types": "./lib/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "npm run prettier:check && ./scripts/generate-icons.cjs && heft build --clean && (npm run css:build 2>&1)",
    "build:watch": "heft build --watch",
    "clean": "heft clean",
    "css:build": "sass src/styles/main.scss lib/main.css",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "start": "storybook dev -p 6007 --no-open",
    "storybook:build": "storybook build --quiet",
    "test": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dossierhq/dossierhq.git",
    "directory": "libraries/design"
  },
  "dependencies": {
    "@creativebulma/bulma-badge": "~1.0.1",
    "@fortawesome/free-solid-svg-icons": "~6.3.0",
    "@react-aria/overlays": "~3.12.0",
    "lodash": "~4.17.21",
    "react": "~18.2.0",
    "react-dom": "~18.2.0",
    "tslib": "~2.5.0"
  },
  "devDependencies": {
    "@dossierhq/heft-node-rig": "workspace:*",
    "@rushstack/heft": "0.50.0",
    "@storybook/addon-actions": "~7.0.0-beta.36",
    "@storybook/addon-docs": "~7.0.0-beta.36",
    "@storybook/addon-essentials": "~7.0.0-beta.36",
    "@storybook/addon-links": "~7.0.0-beta.36",
    "@storybook/preset-scss": "~1.0.3",
    "@storybook/react": "~7.0.0-beta.36",
    "@storybook/react-vite": "~7.0.0-beta.36",
    "@types/lodash": "~4.14.191",
    "@types/react": "~18.0.28",
    "@types/react-dom": "~18.0.11",
    "@typescript-eslint/eslint-plugin": "~5.54.1",
    "@typescript-eslint/parser": "~5.55.0",
    "@vitejs/plugin-react": "~3.1.0",
    "bulma": "~0.9.4",
    "eslint": "~8.36.0",
    "eslint-plugin-react": "~7.32.2",
    "eslint-plugin-react-hooks": "~4.6.0",
    "eslint-plugin-storybook": "~0.6.10",
    "mini-svg-data-uri": "~1.4.4",
    "prettier": "2.8.4",
    "sass": "~1.59.2",
    "sass-loader": "~13.2.0",
    "storybook": "~7.0.0-beta.36",
    "svgo": "~3.0.2",
    "typescript": "~5.0.2",
    "vite": "~4.1.2"
  }
}
