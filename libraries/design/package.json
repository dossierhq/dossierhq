{
  "name": "@dossierhq/design",
  "version": "0.4.7",
  "description": "The design system for Dossier.",
  "keywords": [
    "dossier",
    "cms",
    "design-system",
    "react"
  ],
  "homepage": "https://dossierhq.dev",
  "type": "module",
  "exports": {
    ".": "./lib/index.js",
    "./main.css": "./lib/main.css"
  },
  "types": "./lib/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "npm run prettier:check && ./scripts/generate-icons.cjs && heft build --clean && (npm run css:build 2>&1)",
    "build:watch": "heft build-watch",
    "clean": "heft clean",
    "css:build": "sass src/styles/main.scss lib/main.css",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "start": "storybook dev -p 6007 --no-open",
    "storybook:build": "storybook build --quiet",
    "test": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dossierhq/dossierhq.git",
    "directory": "libraries/design"
  },
  "dependencies": {
    "@creativebulma/bulma-badge": "~1.0.1",
    "@fortawesome/free-solid-svg-icons": "~6.4.2",
    "@react-aria/overlays": "~3.19.0",
    "lodash": "~4.17.21",
    "react": "~18.2.0",
    "react-aria-components": "~1.0.0-rc.0",
    "react-dom": "~18.2.0",
    "tslib": "~2.6.2"
  },
  "devDependencies": {
    "@dossierhq/heft-node-rig": "workspace:*",
    "@rushstack/heft": "0.63.2",
    "@storybook/addon-actions": "~7.5.3",
    "@storybook/addon-docs": "~7.5.3",
    "@storybook/addon-essentials": "~7.5.3",
    "@storybook/addon-links": "~7.5.3",
    "@storybook/preset-scss": "~1.0.3",
    "@storybook/react": "~7.5.3",
    "@storybook/react-vite": "~7.5.3",
    "@types/lodash": "~4.14.201",
    "@types/react": "~18.2.37",
    "@types/react-dom": "~18.2.15",
    "@typescript-eslint/eslint-plugin": "~6.11.0",
    "@typescript-eslint/parser": "~6.11.0",
    "@vitejs/plugin-react": "~4.2.0",
    "bulma": "~0.9.4",
    "eslint": "~8.54.0",
    "eslint-plugin-react": "~7.33.2",
    "eslint-plugin-react-hooks": "~4.6.0",
    "eslint-plugin-storybook": "~0.6.15",
    "mini-svg-data-uri": "~1.4.4",
    "prettier": "3.1.0",
    "react-stately": "~3.28.0",
    "sass": "~1.69.5",
    "sass-loader": "~13.3.2",
    "storybook": "~7.5.3",
    "svgo": "~3.0.4",
    "typescript": "~5.3.2",
    "vite": "~5.0.0"
  }
